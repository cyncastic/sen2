%section.admin
  %h1 Log In

  - if flash[:alert]
    %p{ :id => "notice"}= flash[:alert]

  = form_tag do
    .field
      = label_tag :name, 'Name:'
      = text_field_tag :name, params[:name], autofocus: 'autofocus'
    .field
      = label_tag :password, 'Password:'
      = password_field_tag :password, params[:password]
    .actions
      = submit_tag "Login", class: 'btn'