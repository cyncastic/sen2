%section.admin
  %h1 Listing categories

  %table
    %thead
      %tr
        %th Name
        %th Hidden
        %th
    %tbody.sorts{ data: { update_url: sort_categories_url } }
      - @categories.each do |category|
        = content_tag_for :tr, category do
          %td= category.name
          %td= category.hidden
          %td.actions
            = link_to 'Show', category
            = link_to 'Edit', edit_category_path(category)
            = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

  .actions
    = link_to 'New Category', new_category_path, class: 'btn'