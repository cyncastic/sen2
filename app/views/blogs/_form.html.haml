= form_for(@blog) do |f|
  - if @blog.errors.any?
    .error_explanation
      %h2
        = pluralize(@blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - @blog.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :title
    = f.text_field :title, autofocus: 'autofocus'
  .field
    = f.label :posted
    = f.date_select :posted
  .field
    = f.label :post
    = f.text_area :post
  .actions
    = f.submit class: 'btn'