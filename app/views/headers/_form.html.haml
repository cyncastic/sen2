= form_for(@header) do |f|
  - if @header.errors.any?
    #error_explanation
      #h2= pluralize(@header.errors.count, "error") + 'prohibited this category from being saved'
      %ul
        -@header.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit class: 'btn'